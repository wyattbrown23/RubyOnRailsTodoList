<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @todo.name %>
</p>

<% @tasks.each do |task| %>

  <% if task.done == true %>
    <p><%= task.title %></p>

      <%= form_for task do |f| %>

      <%= f.check_box :done, :value => task.done %>

      <%= f.submit "Undo" %>
    <% end %>
    <% elsif task.done == false%>
    <p><%= task.title %></p>

        <%= form_for task do |f| %>

          <%= f.check_box :done, :value => task.done %>

          <%= f.submit "Done" %>
        <% end %>
    <% end %>
<% end %>

<%= form_for @task do |f| %>

  <p><%= f.text_field :title %></p>

  <%= f.hidden_field :todo_id, :value => @todo.id %>

  <%= f.submit "Add Task" %>
<% end %>

<%= link_to 'Edit', edit_todo_path(@todo) %> |
<%= link_to 'Back', todos_path %>
